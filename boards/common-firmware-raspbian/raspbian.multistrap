[General]
arch=armhf
bootstrap=raspberrypi
aptsources=raspberrypi

cleanup=true

omitrequired=true

# The Raspberry Pi Archive Signing Key can be found at:
#  https://archive.raspberrypi.org/debian/raspberrypi.gpg.key
# But, once again, I can locate no package containing that key
noauth=true

[raspberrypi]
source=http://archive.raspberrypi.org/debian/
suite=jessie
omitdebsrc=true

# firmware for wifi dongle
packages= firmware-ralink
